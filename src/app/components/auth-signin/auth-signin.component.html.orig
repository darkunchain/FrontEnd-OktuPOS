<div class="container">
  <div class="center">
    <div class="card border-danger mb-3 mt-4" style="max-width: 20rem">
      <div class="card-header center">
        <img
          class="brand"
          src="../assets/img/logo.svg"
          alt="logo-OktuPOS"
          height="60"
        />
        <a
          routerLink="/signin"
          routerLinkActive="active"
          class="nav-link active"
          ><h5>Login</h5></a
        >
        <a routerLink="/signup" routerLinkActive="active" class="nav-link"
          ><h5>register</h5></a
        >
      </div>
      <div class="card-body">
        <h6 class="card-title">Ingrese Usuario y contraseña</h6>
        <div class="card-text">
          <form (submit)="signin()">
            <fieldset>
              <div class="form-group">
                <label for="InputEmail" class="form-label mt-4"
                  >correo electrónico</label
                >
                <input
                  type="email"
                  required
                  [(ngModel)]="user.username"
                  [ngModelOptions]="{ standalone: true }"
                  class="form-control"
                  id="InputEmail"
                  aria-describedby="emailHelp"
                  placeholder="Ingrese su correo"
                  autofocus
                />
                <small id="emailHelp" class="form-text text-muted"
                  >No comparta esta informacion con terceros.</small
                >
              </div>

              <div class="form-group">
                <label for="exampleInputPassword1" class="form-label mt-4"
                  >Password</label
                >
                <input
                  type="password"
                  required
                  [(ngModel)]="user.password"
                  [ngModelOptions]="{ standalone: true }"
                  class="form-control"
                  id="InputPassword"
                  placeholder="Password"
                />
              </div>

              <ng-container *ngIf="errores">
                <div
                  [hidden]="isShow"
                  class="alerta alert alert-dismissible alert-danger mt-2"
                >
                  <strong>Error!</strong>
                  <p>{{ errores }}</p>
                </div>
                <div
                  [hidden]="!isShow"
                  class="alerta alert alert-dismissible alert-success mt-2"
                >
                  <strong>El usuario ingresó con exito!</strong>
                </div>
              </ng-container>
            </fieldset>
            <div class="d-grid gap-2 mt-4">
              <button class="btn btn-lg btn-primary" type="submit">
                Login
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
